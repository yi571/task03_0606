
@{
    ViewBag.Title = "StoreChart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2></h2>
<div class="row justify-content-md-center">
    <div class="col-md-auto">
        <input class="form-control" type="date" id="dateInput" value="@ViewBag.today" />
    </div>
</div><br /><hr />
<div class="row">
    <div class="col-sm">
        <div class="card">


            <div class="card-body">

                <div id="chartContainer"></div>
            </div>

        </div>
    </div>
</div>



<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script type="text/javascript">

    window.onload = function () {
        $("#dateInput").change(function () {
            var url = "/Member/StoreChart?polit1=" + $("#dateInput").val();
            window.location.href = url;
            //alert(url);
        })
            var chart = new CanvasJS.Chart("chartContainer", {
                theme: "theme2",
                animationEnabled: true,
                exportEnabled: true,
                title: {
                    html: "<i class='fa fa - bar - chart'></i> ",
                    text: "@ViewBag.today 產品銷售量"
                },
                subtitles: [{
                    text: ""
                }],
                axisX: {
                    title: "產品"
                },
                axisY: {
                    title: "銷售量",
                    titleFontColor: "#4F81BC",
                    lineColor: "#4F81BC",
                    labelFontColor: "#4F81BC",
                    tickColor: "#4F81BC"
                },

                toolTip: {
                    shared: true
                },
                legend: {
                    cursor: "pointer",
                    itemclick: toggleDataSeries
                },
                data: [{
                    type: "column",
                    name: "銷售量",
                    showInLegend: false,
                    yValueFormatString: "#,##0.# 份",
                    dataPoints: [
                    @foreach(task03_0606.Models.CDaySell item in ViewBag.test){
                        @: { label: "@item.Name", y: @item.DayCount},
                    }

                    ]
                }]

            });
            chart.render();

            function toggleDataSeries(e) {
                if (typeof (e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
                    e.dataSeries.visible = false;
                } else {
                    e.dataSeries.visible = true;
                }
                e.chart.render();
            }



        }
</script>

