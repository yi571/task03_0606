
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_Member_LayoutPage1.cshtml";
}

<h2>會員登入</h2>
<div class="container custom-container-width">
    <div class="card card-login mx-auto mt-5">
        <div class="card-header">登入</div>
        <div class="card-body">
            <form method="post" action="">
                <div class="form-group">
                    <label for="exampleInputEmail1">電子信箱：</label>
                    <input class="form-control" id="email" name="email" type="email" aria-describedby="emailHelp" placeholder="請輸入信箱...">
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">密碼：</label>
                    <input class="form-control" id="pwd" name="pwd" type="password" required="required" placeholder="請輸入密碼...">
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" type="checkbox"> 記住密碼
                        </label>
                    </div>
                </div>
                @*<a class="btn btn-primary btn-block" href="index.html">登入</a>*@
                <button type="submit" class="btn btn-primary btn-block">登入</button>
            </form>
            <div class="text-center">
                <a class="d-block small mt-3" href="/Member/Register">註冊帳號</a>
                <a class="d-block small" href="/Member/ForgotPassword">忘記密碼?</a>
            </div>
        </div>
    </div>
</div>

