@model task03_0606.Models.Product
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
        <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
        <!------ Include the above in your HEAD tag ---------->
        <section class="login-block">
            <div class="container">
                <div class="row">
                    <div class="col-md-4 login-sec">
                        <h2 class="text-center"><i class="fa fa-edit"></i> 修改商品</h2>
                        <h4 class="text-center">更改完畢，按下存檔按鈕。</h4>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.productID)

                        <div class="form-group">
                            &nbsp&nbsp&nbsp商品名稱@*@Html.LabelFor(model => model.productName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.productName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.productName, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            &nbsp&nbsp&nbsp商品圖檔@*@Html.LabelFor(model => model.productPicture, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.productPicture, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.productPicture, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            &nbsp&nbsp&nbsp銷售數量@*@Html.LabelFor(model => model.salesVolume, htmlAttributes: new { @class = "control-label col-md-2" })*@ (可不填)
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.salesVolume, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.salesVolume, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            &nbsp&nbsp&nbsp商品代號@*@Html.LabelFor(model => model.storeProductId, htmlAttributes: new { @class = "control-label col-md-2" })*@ (可不填)
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.storeProductId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.storeProductId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            &nbsp&nbsp&nbsp商品介紹@*@Html.LabelFor(model => model.productDescription, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.productDescription, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.productDescription, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            &nbsp&nbsp&nbsp商品價錢@*@Html.LabelFor(model => model.productPrice, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                <div class="checkbox">
                                    @Html.EditorFor(model => model.productPrice)
                                    @Html.ValidationMessageFor(model => model.productPrice, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            &nbsp&nbsp&nbsp店家代號@*@Html.LabelFor(model => model.storeId, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.storeId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.storeId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            &nbsp&nbsp&nbsp商品狀態@*@Html.LabelFor(model => model.productState, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.productState, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.productState, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            &nbsp&nbsp&nbsp商品類別@*@Html.LabelFor(model => model.categoryID, htmlAttributes: new { @class = "control-label col-md-2" })*@
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.categoryID, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.categoryID, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <i class="fa glyphicon-ok-sign"></i><input type="submit" value="存檔" class="btn btn-default" />
                            </div>
                        </div>
                        <div>
                            <i class="fa fa-heart"></i> @Html.ActionLink("回商品列表", "ManagerIndex")
                        </div>



                    </div>

                    <div class="col-md-8 banner-sec">
                        <div class="col-md">
                            <label for="previewImg">商品照片預覽</label><br />
                            <img id="previewImg" src="~/photo/@ViewBag.result.productPicture" width="300" />
                        </div>

                    </div>
                </div>
        </section>
    </div>
}


