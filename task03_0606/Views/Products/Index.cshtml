@model List<task03_0606.Models.FoodCategories>
@{
    ViewBag.Title = "Index";
}

<h2>美食分類</h2>

<div class="container-fluid">
      

   
     <div class="card-group">
        @foreach(task03_0606.Models.FoodCategories db in Model)
       {
           <div class="card" style="width:200px">
            <img class="card-img-top" src="~/photo/productsindex/@db.categoryPicture" alt="Card image cap">
            <div class="card-body  d-flex flex-column">
                <h5 class="card-title text-center">@db.categoryName</h5>
                <p class="card-text">@db.Description</p>
                <a href="~/Products/@db.categoryURL" class="btn btn-primary align-end mt-auto">進入挑選</a>
                

            </div>
         
        </div>
       }
    
         </div>
</div>