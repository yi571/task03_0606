<script>
    $(document).ready(function () { console.log("ready"); });

    //產品加入購物車
    function AddToCart(productId) {
        $.ajax({
            type: "post",
            url: '@Url.Action("AddToCart","Cart")',
            data: { id: productId }
        }).done(function (msg) {
            $("li#Cart").html(msg);
            $("#Modal").modal("hide");
            })
    }
    //產品移除購物車
    function RemoveFromCart(productId) {
        $.ajax({
            type: "post",
            url: '@Url.Action("RemoveFromCart", "Cart")',
            data: { id: productId},
        }).done(function (msg) {
            $("li#Cart").html(msg);
            })
    }

</script>

