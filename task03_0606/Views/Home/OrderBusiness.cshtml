<script>

    //找 id=dataTable table 下的 tr class=orderListItem ==> tr[]
    $("#dataTable").find("tr.orderListItem").click(function () {
        //alert(this.innerText);
        //alert(this.cells[0].innerText);
        //$("#debug").text(this.cells[0].innerText);
        $("#orderDetail_time").text(this.cells[0].innerText);
        $("#orderDetail_customerPhone").text(this.cells[1].innerText);
        $("#orderDetail_orderID").text(this.cells[2].innerText);
        $("#orderDetail_seatID").text(this.cells[3].innerText);

        $("#orderDetail_time_input").val(this.cells[0].innerText);
        $("#orderDetail_customerPhone_input").val(this.cells[1].innerText);
        $("#orderDetail_orderID_input").val(this.cells[2].innerText);
        $("#orderDetail_seatID_input").val(this.cells[3].innerText);

        $("#orderDetail_orderID_input2").val(this.cells[2].innerText);
        //$("#orderDetailForm").submit();
        showOrderDetail()

    });

    function showOrderDetail() {
        var orderID = $("#orderDetail_orderID_input2").val;
        $.get("~/Home/OrderBusiness_detail?orderID=" + orderID, function (data) {
            alert(JSON.stringify(data));
        });
    
        //$("#detailList").append("<tr><td>...</td></tr>")
    }



</script>
